<Window x:Class="winLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:winLogin"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Titulo"
               Grid.ColumnSpan="2"
               Content="LOGIN"
               FontSize="50"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Label x:Name="lblEmail"
               Grid.Row="1"
               Content="E-mail:"/>
        <TextBox x:Name="txbEmail"
                 Grid.Row="1"
                 Grid.Column="1"
                 PreviewTextInput="txbEmail_PreviewTextInput"/>

        <Label x:Name="lblPassword"
               Grid.Row="2"
               Content="Contraseña:"/>
        <PasswordBox x:Name="pwdContraseña"
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="50"
                     VerticalContentAlignment="Center"
                    Margin="20,0"/>

        <Button x:Name="btnAceptar"
                Grid.Row="3"
                Grid.Column="1"
                Content="Aceptar"
                Margin="50,0"
                Click="btnAceptar_Click"/>

        <Button x:Name="btnLimpiar"
                Grid.Row="3"
                Content="Limpiar"
                Margin="50,0"
                Click="btnLimpiar_Click"/>

        <Button x:Name="btnRegistro"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Content="Registrarse"
                Margin="50,0" Click="btnRegistro_Click"/>

        <Label x:Name="lblMensajes"
               Grid.Row="6"
               FontSize="15"
               HorizontalAlignment="Center"
               Grid.ColumnSpan="2"/>
    </Grid>
</Window>
