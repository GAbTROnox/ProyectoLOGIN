<Window x:Class="winLogin.winSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:winLogin"
        mc:Ignorable="d"
        Title="winSignUp" Height="700" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Titulo"
               Grid.ColumnSpan="2"
               Content="SIGN-UP"
               FontSize="50"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Label x:Name="lblNombre"
               Grid.Row="1"
               Content="Nombre:"/>
        <TextBox x:Name="txbNombre"
                 Grid.Row="1"
                 Grid.Column="1"
                 PreviewTextInput="txbNombre_PreviewTextInput" 
                 MaxLength="30"/>

        <Label x:Name="lblApPat"
               Grid.Row="2"
               Content="Ap Paterno:"/>
        <TextBox x:Name="txbApPat"
                 Grid.Row="2"
                 Grid.Column="1"
                 PreviewTextInput="txbNombre_PreviewTextInput" 
                 MaxLength="30"/>

        <Label x:Name="lblApMat"
               Grid.Row="3"
               Content="Ap Materno:"/>
        <TextBox x:Name="txbApMat"
                 Grid.Row="3"
                 Grid.Column="1"
                 PreviewTextInput="txbNombre_PreviewTextInput" 
                 MaxLength="30"/>

        <Label x:Name="lblEmail"
               Grid.Row="4"
               Content="E-mail:"/>
        <TextBox x:Name="txbEmail"
                 Grid.Row="4"
                 Grid.Column="1"
                 PreviewTextInput="txbEmail_PreviewTextInput"/>

        <Label x:Name="lblCelular"
               Grid.Row="5"
               Content="Celular:"/>
        <TextBox x:Name="txbCelular"
                 Grid.Row="5"
                 Grid.Column="1"
                 PreviewTextInput="txbCelular_PreviewTextInput"
                 MaxLength="15"/>


        <Label x:Name="lblAñoNac"
               Grid.Row="6"
               Content="Año Nacimiento:"/>
        <TextBox x:Name="txbAñoNac"
                 Grid.Row="6"
                 Grid.Column="1"
                 PreviewTextInput="txbCelular_PreviewTextInput"
                 MaxLength="15" />
        
        <Label x:Name="lblPassword"
               Grid.Row="7"
               Content="Contraseña:"/>
        <PasswordBox x:Name="pwdContraseña"
                    Grid.Row="7"
                    Grid.Column="1"
                    Height="50"
                    VerticalContentAlignment="Center"
                    Margin="20,0"/>

        <Button x:Name="btnAceptar"
                Grid.Row="8"
                Grid.Column="1"
                Content="Aceptar"
                FontSize="20"
                FontWeight="Bold"
                Height="60"
                Width="120"
                Margin="50,0"
                Background="Aqua" Click="btnAceptar_Click"/>

        <Button x:Name="btnLimpiar"
                Grid.Row="8"
                Content="Limpiar"
                FontSize="20"
                FontWeight="Bold"
                Height="60"
                Width="120"
                Margin="50,0"
                Background="Aqua" Click="btnLimpiar_Click"/>

        <Label x:Name="lblMensajes"
               Grid.Row="9"
               FontSize="15"
               HorizontalAlignment="Center"
               Grid.ColumnSpan="2"/>
    </Grid>
</Window>
